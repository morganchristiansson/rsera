<h1>Listing reports</h1>

<table>
  <tr>
    <th>Rankdate</th>
    <th>Reportrules</th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%=h report.created_at %></td>
    <td style="text-align: right;"><%= report.searchengine_logs.count %></td>
    <td><%= link_to 'Show', report %></td>
    <td><%= link_to 'Edit', edit_report_path(report) %></td>
    <td><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New report', new_site_report_path(@site) %>

