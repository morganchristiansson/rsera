<h1>Listing sites</h1>

<table>
  <tr>
    <th>Url</th>
  </tr>

<% @sites.each do |site| %>
  <tr>
    <td><%= link_to h(site.url), site %></td>
    <td><%= link_to 'Trends', site_trends_path(site) %></td>
    <td><%= link_to 'Keywords', site_keywords_path(site) %></td>
    <td><%= link_to 'Reports', site_reports_path(site) %></td>
    <td><%= link_to 'Edit', edit_site_path(site) %></td>
    <td><%= link_to 'Destroy', site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New site', new_site_path %>
